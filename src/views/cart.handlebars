<h1>Cart</h1>
<hr>
<table class="table table-dark table-striped text-center">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Title</th>
      <th scope="col">Price</th>
      <th scope="col">Stock</th>
      <th scope="col">Quantity</th>
      <th scope="col"></th>
    </tr>
  </thead>
  {{#each productsInCart}}
  <tbody>
    <tr>
      <th scope="row"></th>
      <td>{{id.title}}</td>
      <td>{{id.price}}</td>
      <td>{{id.stock}}</td>
      <td>{{quantity}}</td>
      <td>
      <button onclick="handleSubmit('{{../cart._id}}', '{{id._id}}')" id="" class="btn btn-danger">X</button>
      </td>
    </tr>
  </tbody>
  {{/each}}
</table>
<form action="/api/carts/{{cart._id}}/purchase" method="post">
  <button class="btn btn-success">Comprar</button>
</form>
<br>
<a href="/products"><button class="btn btn-danger">Volver al Inicio</button></a>

<script src="/js/deleteCart.js"></script>