<div class="card text-center position-absolute top-50 start-50 translate-middle" style="width: 24rem; height: 20rem;">
  <div class="card-body">
    <h5 class="card-title">{{product.title}}</h5>
    <strong>Stock</strong> {{product.stock}} <br>
    <strong>Precio </strong>${{product.price}} <br>
    <strong>Categor√≠a</strong> {{product.category}} <br>
    <strong>Description: </strong>
    <p class="card-text">{{product.description}}</p>
  </div>
    <form class="card text-center" action="/api/carts/{{user.cart._id}}/product/{{product._id}}" method="post">
      <button id="addToCart" type="submit" class="btn btn-success">Agregar</button>
    </form>
    <a class="btn btn-danger" href="#" onClick="history.go(-1)">Volver</a>
</div>