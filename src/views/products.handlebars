<table class="table table-dark table-striped text-center">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Title</th>
      <th scope="col">Categoria</th>
      <th scope="col">Price</th>
      <th scope="col">Stock</th>
      <th scope="col">Owner</th>
      <th scope="col"></th>
    </tr>
  </thead>
  {{#each data.docs}}
  <tbody>
    <tr>
      <th scope="row"></th>
      <td><a href="/api/products/{{_id}}">{{title}}</a></td>
      <td>{{category}}</td>
      <td>{{price}}</td>
      <td>{{stock}}</td>
      <td>{{owner.email}}</td>
      <td>
      <button onclick="deleteProd('{{_id}}')" id="" class="btn btn-danger">X</button>
      </td>
    </tr>
  </tbody>
  {{/each}}
</table>

<script src="/js/product.js"></script>