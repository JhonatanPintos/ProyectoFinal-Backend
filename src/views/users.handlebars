<h1>Usuarios</h1>
<table class="table table-dark table-striped text-center">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">Email</th>
      <th scope="col">Rol</th>
      <th scope="col">Upgrade</th>
      <th scope="col">Eliminar</th>
    </tr>
  </thead>
  {{#each users}}
  <tbody>
    <tr>
      <th scope="row"></th>
      <td>{{_id}}</td>
      <td>{{first_name}}</td>
      <td>{{email}}</td>
      <td>{{role}}</td>
      <td>
      <form action="/api/users/{{_id}}">
        <button class="btn btn-success">&#x1F44D;</button>
      </form>
      </td>
      <td>
      <button onclick="handleSubmit('{{_id}}')" id="" class="btn btn-danger">&#x1F44E;</button>
      </td>
    </tr>
  </tbody>
  {{/each}}
</table>
<form action="/api/users/delete" method="get">
  <button class="btn btn-success">Eliminar usuarios Inactivos</button>
</form>
<br>
<a href="/products"><button class="btn btn-danger">Volver al Inicio</button></a>

<script src="/js/deleteUser.js"></script>